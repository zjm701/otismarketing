<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<bean type="org.apache.struts2.dispatcher.multipart.MultiPartRequest"
		name="otisRequestParser" class="com.otis.marketing.common.RequestParseWrapper"
		scope="default" optional="true" />
	<constant name="struts.multipart.handler" value="otisRequestParser" />


	<package name="struts-otismarketing" extends="struts-default">

		<global-results>
			<result name="error">/pages/error.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>

	</package>

	<include file="struts-otismarketing.xml" />

	<!-- Add packages here -->

</struts>
